<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/rl_enter_a_pin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/ll_enter_a_pin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/padding_restore_password">

            <TextView
                android:id="@+id/tv_title_enter_a_pin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/padding_restore_password"
                android:layout_marginTop="@dimen/padding_restore_password"
                android:text="@string/enter_a_pin"
                android:textColor="@color/black"
                android:textSize="@dimen/textSizeXLarge"/>

            <LinearLayout
                android:id="@+id/ll_dots_enter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/padding_restore_password"
                android:layout_marginTop="@dimen/padding_restore_password"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_enter_pin_1"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_margin="3dp"
                    android:background="@drawable/dot_empty"/>

                <ImageView
                    android:id="@+id/iv_enter_pin_2"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_margin="3dp"
                    android:background="@drawable/dot_empty"/>

                <ImageView
                    android:id="@+id/iv_enter_pin_3"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_margin="3dp"
                    android:background="@drawable/dot_empty"/>

                <ImageView
                    android:id="@+id/iv_enter_pin_4"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_margin="3dp"
                    android:background="@drawable/dot_empty"/>

                <ImageView
                    android:id="@+id/iv_enter_pin_5"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_margin="3dp"
                    android:background="@drawable/dot_empty"/>

                <ImageView
                    android:id="@+id/iv_enter_pin_6"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_margin="3dp"
                    android:background="@drawable/dot_empty"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/padding_restore_password"
                android:layout_marginTop="@dimen/padding_restore_password"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <FrameLayout
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_margin="3dp"
                        android:background="@drawable/dot_empty">

                        <TextView
                            android:id="@+id/tv_1_enter_a_pin"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="1"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/textSizeLarge"/>
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_margin="3dp"
                        android:background="@drawable/dot_empty">

                        <TextView
                            android:id="@+id/tv_2_enter_a_pin"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="2"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/textSizeLarge"/>
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_margin="3dp"
                        android:background="@drawable/dot_empty">

                        <TextView
                            android:id="@+id/tv_3_enter_a_pin"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="3"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/textSizeLarge"/>
                    </FrameLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <FrameLayout
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_margin="3dp"
                        android:background="@drawable/dot_empty">

                        <TextView
                            android:id="@+id/tv_4_enter_a_pin"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="4"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/textSizeLarge"/>
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_margin="3dp"
                        android:background="@drawable/dot_empty">

                        <TextView
                            android:id="@+id/tv_5_enter_a_pin"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="5"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/textSizeLarge"/>
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_margin="3dp"
                        android:background="@drawable/dot_empty">

                        <TextView
                            android:id="@+id/tv_6_enter_a_pin"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="6"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/textSizeLarge"/>
                    </FrameLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <FrameLayout
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_margin="3dp"
                        android:background="@drawable/dot_empty">

                        <TextView
                            android:id="@+id/tv_7_enter_a_pin"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="7"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/textSizeLarge"/>
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_margin="3dp"
                        android:background="@drawable/dot_empty">

                        <TextView
                            android:id="@+id/tv_8_enter_a_pin"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="8"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/textSizeLarge"/>
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_margin="3dp"
                        android:background="@drawable/dot_empty">

                        <TextView
                            android:id="@+id/tv_9_enter_a_pin"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="9"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/textSizeLarge"/>
                    </FrameLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <FrameLayout
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_margin="3dp">
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_margin="3dp"
                        android:background="@drawable/dot_empty">

                        <TextView
                            android:id="@+id/tv_0_enter_a_pin"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/textSizeLarge"/>
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_margin="3dp">

                        <TextView
                            android:id="@+id/tv_c_enter_a_pin"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:background="@drawable/dot_empty"
                            android:gravity="center"
                            android:text="C"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/textSizeLarge"/>
                    </FrameLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="48dp"
            android:layout_marginTop="@dimen/padding_restore_password"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_yes_enter_a_pin"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:background="@drawable/button_round_add_emc_selector"
                android:enabled="false"
                android:fontFamily="sans-serif"
                android:text="@string/ok"
                android:textColor="@color/white"
                android:textSize="@dimen/textSizeMedium"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/white"/>

            <Button
                android:id="@+id/btn_cancel_enter_a_pin"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:background="@drawable/btn_cancel_new_address_light_emc_bg"
                android:backgroundTint="@color/buttonCancelBitcoin"
                android:fontFamily="sans-serif"
                android:text="@string/cancel"
                android:textColor="@drawable/text_selector"
                android:textSize="@dimen/textSizeMedium"/>
        </LinearLayout>
    </RelativeLayout>

</FrameLayout>
