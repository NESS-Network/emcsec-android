<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="35dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/padding_restore_password">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/padding_restore_password"
            android:layout_marginTop="@dimen/padding_restore_password"
            android:gravity="center_horizontal"
            android:text="@string/address_for_the_change_in_bitcoin"
            android:textColor="@color/black"
            android:textSize="@dimen/textSizeMedium"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_change_addresses_btc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:listitem="@layout/item_change_address"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/padding_restore_password"
            android:layout_marginTop="@dimen/padding_restore_password"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_save_address_for_the_change_bitcoin"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:background="@drawable/btn_add_new_address_light_emc_bg"
                android:backgroundTint="@color/orange"
                android:fontFamily="sans-serif"
                android:text="@string/save"
                android:textColor="@drawable/text_selector"
                android:textSize="@dimen/textSizeMedium"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/white"/>

            <Button
                android:id="@+id/btn_cancel_address_for_the_change_bitcoin"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:background="@drawable/btn_cancel_new_address_light_emc_bg"
                android:backgroundTint="@color/buttonCancelBitcoin"
                android:fontFamily="sans-serif"
                android:text="@string/cancel"
                android:textColor="@drawable/text_selector"
                android:textSize="@dimen/textSizeMedium"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>