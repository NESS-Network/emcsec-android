<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/forgot_password_margin"
    app:cardCornerRadius="35dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/padding_restore_password">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/padding_restore_password"
            android:layout_marginTop="@dimen/padding_restore_password"
            android:text="@string/the_server_for_bitcoin"
            android:textColor="@android:color/background_dark"
            android:textSize="@dimen/textSizeLarge"/>

        <EditText
            android:id="@+id/et_host_bitcoin"
            android:layout_width="@dimen/width_of_auth_views"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/padding_restore_password"
            android:fontFamily="sans-serif-light"
            android:hint="@string/host"
            android:inputType="text"
            android:textColorHint="@color/buttonDisabled"/>

        <EditText
            android:id="@+id/et_port_bitcoin"
            android:layout_width="@dimen/width_of_auth_views"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/padding_restore_password"
            android:fontFamily="sans-serif-light"
            android:hint="@string/port"
            android:inputType="number"
            android:maxLength="5"
            android:textColorHint="@color/buttonDisabled"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/padding_restore_password"
            android:layout_marginTop="@dimen/padding_restore_password"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_save_server_bitcoin"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:background="@drawable/button_round_add_btc_selector"
                android:enabled="false"
                android:fontFamily="sans-serif"
                android:text="@string/save"
                android:textColor="@color/white"
                android:textSize="@dimen/textSizeMedium"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/white"/>

            <Button
                android:id="@+id/btn_cancel_server_bitcoin"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:background="@drawable/btn_cancel_new_address_light_emc_bg"
                android:backgroundTint="@color/buttonCancelBitcoin"
                android:fontFamily="sans-serif"
                android:text="@string/cancel"
                android:textColor="@drawable/text_selector"
                android:textSize="@dimen/textSizeMedium"/>

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>